<% if @image.any? %>
<ul class="images">
    <% @image.each do |im| %>
    <li>
        <%= link_to(im) do %>
            <%= image_tag(im.photo.url(:medium), :class => 'avatar') %>
            <h4><%= im.title %></h4>
        <% end %>
        <span class="timestamp">
            Uploaded
            <%= time_ago_in_words(im.created_at) %>
            ago.
            <% if current_user?(im.user) %>
            <%= link_to "delete", im, method: :delete,
                                       data: { confirm: "You sure?" } %>
            <% end %>
        </span>
    </li>
    <% end %>
</ul>
<% end %>
